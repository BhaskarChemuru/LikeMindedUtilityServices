<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>CustomerUtilityServics</display-name>

 <servlet>
        <servlet-name>cusLogin</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>cusLogin</servlet-name>
        <url-pattern>/login.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cusLogin</servlet-name>
        <url-pattern>/mcuslogin.jsp</url-pattern>
    </servlet-mapping>
      <servlet-mapping>
        <servlet-name>cusLogin</servlet-name>
        <url-pattern>/ebillenrollment.jsp</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>cusLogin</servlet-name>
        <url-pattern>/addaccount.jsp</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>cusLogin</servlet-name>
        <url-pattern>/selectaccount.jsp</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
        <servlet-name>cusLogin</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>cusLogin</servlet-name>
        <url-pattern>/forgotUserId.jsp</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>cusLogin</servlet-name>
        <url-pattern>/forgotPassword.jsp</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>cusLogin</servlet-name>
        <url-pattern>/resetPasswd.jsp</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>cusLogin</servlet-name>
        <url-pattern>/logout.jsp</url-pattern>
    </servlet-mapping>

 <servlet>
        <servlet-name>cusRegistration</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>cusRegistration</servlet-name>
        <url-pattern>/registration.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>cusRegistration</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    
    <context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/cusLogin-servlet.xml</param-value>
		<param-value>/WEB-INF/cusRegistration-servlet.xml</param-value>
 	</context-param>
 
  <listener>
       <listener-class>
          org.springframework.web.context.ContextLoaderListener
       </listener-class>
  </listener>
   
</web-app>